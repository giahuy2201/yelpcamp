<% include ../partials/header %>
<% include ../partials/navbar %>
<% include ../partials/alerts %>

<div class="alert alert-danger d-none" id="errorAlert"></div>

<div class="jumbotron d-none">
    <h1 class="display-4"><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
    <p class="lead">This is a place where people around the world enjoy sharing their fantastic campgrounds.</p>
    <hr class="my-4">
    <!-- <p>A huge library of hand-picked campground all over the world.</p> -->
    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
</div>

<div id="carouselHome" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators d-none d-sm-flex">
    <li data-target="#carouselHome" data-slide-to="0" class="active"></li>
    <li data-target="#carouselHome" data-slide-to="1"></li>
    <li data-target="#carouselHome" data-slide-to="2"></li>
  </ol>
  <div class="carousel-caption">
    <h1 class="display-4">YelpCamp</h1>
    <p class="lead d-none d-sm-block">This is a place where people around the world enjoy sharing their fantastic campgrounds.</p>
    <a class="btn btn-primary" href="/explore">Explore</a>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1541919635-250e08fbdd21?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=946fdce20e3a8e18e54913cafa617a2a&auto=format&fit=crop&w=800&q=60" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1541918403752-942fe6b35322?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fc3f8f0b7fa7448a513e4732e6a7eb8f&auto=format&fit=crop&w=800&q=60" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1541939838502-d7cc0c9cd0ee?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ba8839df9dbfbe28243b90205983a914&auto=format&fit=crop&w=800&q=60" alt="Third slide">
    </div>
  </div>
</div>

<div class="row my-4">
    <% campgrounds.forEach((campground)=>{ %>
    <div class="col-xl-3 col-lg-4 col-md-6">
        <a href="/campgrounds/<%=campground._id%>">
            <div class="card campgroundCard my-2">
                <img class="card-img-top" src="<%=campground.image%>">
                <div class="card-body text-dark p-1 bg-light">
                    <h5 class="card-title text-center m-0">
                        <%=campground.name%>
                    </h5>
                </div>
            </div>
        </a>
    </div>
    <% }) %>
</div>

<% include ../partials/footer %>