<% include ../partials/navbar %>

<form class="my-4" action="/campgrounds/<%=campground._id%>/comments" method="POST">
    <h1 class="text-center">Add a comment to
        <%=campground.name%>
    </h1>
    <div class="form-group">
        <label for="textInput">Text</label>
        <input type="text" class="form-control" id="textInput" name="comment[text]" required>
    </div>
    <div class="form-group my-4">
        <input class="btn btn-success" type="submit">
    </div>
</form>

